<!-- header.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>header</title>
    <link rel="stylesheet" href="/css/header.css">
</head>
<body>
    <header>
        <nav class="headerNav">
            <a href="/">
                <img src="../assets/ourLogo.png" alt="Logo">
            </a>

            <ul class="leftOfSearch">
                <li><a href="/globalrank">Global Ranking</a></li>
                <li><a href="/newest">Newest</a></li>
                <li><a href="/forum">Forums</a></li>
            </ul>

            <form id="searchForm" class="searchForm" action="/search" method="POST">
                <input type="text" name="searchQuery" id="searchQuery" placeholder="Search for a manga..." required>
                <button type="submit">Search</button>
            </form>            

            <ul class="rightOfSearch">
                <% if (userStatus) { %>
                    <li><a href="/userProfiles">Profile</a></li>
                    <li><a href="/logout">Logout</a></li>
                <% } else { %>
                    <li><a href="/login">Login</a></li>
                    <li><a href="/signup">Signup</a></li>
                <% } %>
            </ul>
        </nav>
    </header>

    <div id="searchResultsDropdown" class="dropdown-content"></div> <!-- Dropdown for search results -->
</body>
</html>
