<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Top 10 Best Rated Manga</title>
    <link rel="stylesheet" href="/css/globalrank.css">
    <script>
        function setMangaId(mangaId) {
            // Create a form to submit the manga ID
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '/mangaEntry'; // This is the route to handle the POST

            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'mangaId'; // This should match the name used in your main.js
            input.value = mangaId;

            form.appendChild(input);
            document.body.appendChild(form);
            form.submit();
        }
    </script>
</head>
<body>
    <%- include('partials/header') %>

    <h2>Best Rated Manga of All Time</h2>
    <div class="best-rated-manga-container">
        <%- console.log(popularManga); %> <!-- Log popularManga to the console -->
        <% if (popularManga && popularManga.length) { %>
            <% popularManga.forEach(function(manga) { %>
                <div class="manga-item">
                    <a href="#" onclick="setMangaId('<%= manga.id %>')"> <!-- Use onclick to trigger the function -->
                        <img src="<%= manga.coverImage.large %>" alt="<%= manga.title.romaji || manga.title.english %>">
                        <p><%= manga.title.romaji || manga.title.english %></p>
                    </a>
                </div>
            <% }); %>
        <% } else { %>
            <p>No manga found.</p>
        <% } %>
    </div>
</body>
</html>
